<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Welcome to Rock-Tivity"
            android:layout_width="397dp"
            android:layout_height="78dp"
            android:id="@+id/txtWelcome" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp" android:gravity="center"
            android:textColor="@android:color/darker_gray" android:background="@color/colorPrimaryDark"/>
    <TextView
            android:text="Copyright Jason Sheppard 2019"
            android:layout_width="385dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtFoot" android:textSize="18sp" android:textStyle="italic" android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/btnCreateEvent"
            android:layout_marginBottom="5dp" android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/darker_gray"/>
    <Button
            android:text="View Event Lists"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="198dp"
            android:layout_marginBottom="184dp" app:layout_constraintBottom_toTopOf="@+id/btnCreateEvent"/>
    <Button
            android:text="List an Event"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCreateEvent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/btnView" android:layout_marginBottom="191dp"
            app:layout_constraintBottom_toTopOf="@+id/txtFoot"/>
</android.support.constraint.ConstraintLayout>